<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> The World - @ViewBag.Title </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/resources/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/resources/img/placeholder.png" alt="headshot" class="headshot" />
        <span id="username">Joakim Bajoul Kakaei</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">

        <div id="main">
            <div>
                <button id="sidebarToggle">Hide Sidebar</button>
            </div>
            @RenderBody()
        </div>

        <div id="footer">
            &copy; 2017 Kimput.com.
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/resources/js/site.js"></script>
    @RenderSection("scripts", false);
</body>
</html>